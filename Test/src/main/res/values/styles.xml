<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- activity_main中的Button样式 -->
    <style name="activity_main_button_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">@drawable/btn_bg_custom</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="mypopwindow_anim_style">
        <!-- 指定显示的动画xml -->
        <item name="android:windowEnterAnimation">@anim/popshow_anim</item>
        <!-- 指定消失的动画xml -->
        <item name="android:windowExitAnimation">@anim/pophide_anim</item>
    </style>

    <!--activity的dialog样式-->
    <style name="Theme.Dialog.Activity" parent="@style/Theme.AppCompat.Dialog">
        <item name="windowNoTitle">true</item>
    </style>

    <!--批注activity的样式-->
    <style name="Theme.CustomDialogStyle.Activity" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item><!-- 是否支持透window明度 -->
        <item name="android:windowBackground">@android:color/transparent</item><!-- window背景颜色 -->
    </style>

    <!--smzdm顶部标题栏样式-->
    <style name="TitleStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!--smzdm顶部按钮样式-->
    <style name="MainTopButtonStyle">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_marginRight">30dp</item>
    </style>

</resources>
