<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="ScrollViewSize">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_animation"
                style="@style/activity_main_button_style"
                android:layout_weight="4"
                android:text="@string/click_animation" />

            <Button
                android:id="@+id/btn_fragment"
                style="@style/activity_main_button_style"
                android:layout_weight="5"
                android:text="@string/click_fragment" />

            <Button
                android:id="@+id/btn_recycle_view"
                style="@style/activity_main_button_style"
                android:layout_weight="9"
                android:text="@string/click_recycle_view" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_dialog"
                style="@style/activity_main_button_style"
                android:layout_weight="2"
                android:text="@string/click_dialog_toast" />

            <Button
                android:id="@+id/btn_calendar"
                style="@style/activity_main_button_style"
                android:layout_weight="1"
                android:text="@string/click_calendar" />

            <Button
                android:id="@+id/btn_play_video"
                style="@style/activity_main_button_style"
                android:layout_weight="3"
                android:text="@string/click_play_video" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_shared_preferences"
                style="@style/activity_main_button_style"
                android:layout_weight="2"
                android:text="@string/click_shared_preferences" />

            <Button
                android:id="@+id/btn_file_manager"
                style="@style/activity_main_button_style"
                android:layout_weight="3"
                android:text="@string/click_file_manager" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_camera"
                style="@style/activity_main_button_style"
                android:layout_weight="9"
                android:text="@string/click_camera" />

            <Button
                android:id="@+id/btn_open_service"
                style="@style/activity_main_button_style"
                android:layout_weight="5"
                android:text="@string/click_open_service" />

            <Button
                android:id="@+id/btn_close_service"
                style="@style/activity_main_button_style"
                android:layout_weight="5"
                android:text="@string/click_close_service" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_smzdm"
                style="@style/activity_main_button_style"
                android:layout_weight="1"
                android:text="@string/click_smzdm" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>