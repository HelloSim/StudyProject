<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.sim.basicres.views.TitleView
        android:id="@+id/titleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:common_rightImageSrc="@mipmap/common_ic_setting_white"
        app:common_showRight="true"
        app:common_title="我的" />

    <LinearLayout
        android:id="@+id/user_login"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/common_card_shape_gray"
        android:gravity="center_vertical"
        android:padding="20dp">

        <com.sim.basicres.views.CustomImageView.CustomImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:common_src="@mipmap/common_photo"
            app:common_type="circle" />

        <TextView
            android:id="@+id/tv_user_name"
            style="@style/common_textViewStyle"
            android:layout_width="0dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:gravity="left"
            android:text="用户登录"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/common_ic_to_right" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/user_collect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/common_card_shape_gray"
        android:gravity="center_vertical"
        android:padding="20dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/common_ic_collect_red" />

        <TextView
            style="@style/common_textViewStyle"
            android:layout_width="0dp"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:gravity="left"
            android:text="收藏" />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@mipmap/common_ic_to_right" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/update_version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/common_card_shape_gray"
        android:gravity="center_vertical"
        android:padding="20dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/common_ic_update_black" />

        <TextView
            style="@style/common_textViewStyle"
            android:layout_width="0dp"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:gravity="left"
            android:text="检查更新" />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@mipmap/common_ic_to_right" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/project"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/common_card_shape_gray"
        android:gravity="center_vertical"
        android:padding="20dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/common_ic_project_black" />

        <TextView
            style="@style/common_textViewStyle"
            android:layout_width="0dp"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:gravity="left"
            android:text="开源项目" />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@mipmap/common_ic_to_right" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/author"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/common_card_shape_gray"
        android:gravity="center_vertical"
        android:padding="20dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/common_ic_author_black" />

        <TextView
            style="@style/common_textViewStyle"
            android:layout_width="0dp"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:gravity="left"
            android:text="关于作者" />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@mipmap/common_ic_to_right" />

    </LinearLayout>


</LinearLayout>