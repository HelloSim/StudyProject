<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <com.gauravk.bubblenavigation.BubbleNavigationLinearView
        android:id="@+id/bottom_navigation_view_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/common_white"
        android:elevation="8dp"
        android:orientation="horizontal"
        android:padding="12dp">

        <com.gauravk.bubblenavigation.BubbleToggleView
            android:id="@+id/l_item_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:bt_active="true"
            app:bt_colorActive="#f44336"
            app:bt_colorInactive="#e57373"
            app:bt_icon="@mipmap/app_ic_wangyi"
            app:bt_shape="@drawable/app_transition_background_drawable_home"
            app:bt_title="@string/wangyi" />

        <com.gauravk.bubblenavigation.BubbleToggleView
            android:id="@+id/l_item_search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:bt_badgeBackgroundColor="#4caf50"
            app:bt_colorActive="#03a9f4"
            app:bt_colorInactive="#64b5f6"
            app:bt_icon="@mipmap/app_ic_bus"
            app:bt_shape="@drawable/app_transition_background_drawable_bus"
            app:bt_title="@string/bus" />

        <com.gauravk.bubblenavigation.BubbleToggleView
            android:id="@+id/l_item_profile_list"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:bt_colorActive="#607d8b"
            app:bt_colorInactive="#90a4ae"
            app:bt_icon="@mipmap/app_ic_record"
            app:bt_shape="@drawable/app_transition_background_drawable_record"
            app:bt_title="@string/record" />

        <com.gauravk.bubblenavigation.BubbleToggleView
            android:id="@+id/l_item_notification"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:bt_colorActive="#4caf50"
            app:bt_colorInactive="#81c784"
            app:bt_icon="@mipmap/app_ic_mine"
            app:bt_shape="@drawable/app_transition_background_drawable_mine"
            app:bt_title="@string/user" />

    </com.gauravk.bubblenavigation.BubbleNavigationLinearView>

</LinearLayout>