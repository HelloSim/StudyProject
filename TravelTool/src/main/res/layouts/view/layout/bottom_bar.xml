<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00000000"
    android:orientation="horizontal">

    <RadioGroup
        android:id="@+id/bottom_bar_radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/bottom_bar_home"
            style="@style/MainActivityBottomNavigationRadioButtonStyle"
            android:drawableTop="@drawable/main_bottom_bar_home_img"
            android:text="出行" />

        <RadioButton
            android:id="@+id/bottom_bar_speed"
            style="@style/MainActivityBottomNavigationRadioButtonStyle"
            android:drawableTop="@drawable/main_bottom_bar_speed_img"
            android:text="网易" />

        <RadioButton
            android:id="@+id/bottom_bar_community"
            style="@style/MainActivityBottomNavigationRadioButtonStyle"
            android:drawableTop="@drawable/main_bottom_bar_community_img"
            android:text="打卡" />

        <RadioButton
            android:id="@+id/bottom_bar_me"
            style="@style/MainActivityBottomNavigationRadioButtonStyle"
            android:drawableTop="@drawable/main_bottom_bar_me_img"
            android:text="我的" />

    </RadioGroup>

</LinearLayout>
