<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            style="@style/TitleStyle"
            android:text="@string/bus" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@color/black">

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/loopviewpager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_gravity="bottom"
            android:background="#33000000"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <!-- 标题-->
            <TextView
                android:id="@+id/loop_dec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:textColor="@android:color/white" />
            <!-- 小圆点-->
            <LinearLayout
                android:id="@+id/ll_dots_loop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:gravity="right"
                android:orientation="horizontal"
                android:padding="10dp" />
        </LinearLayout>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/black">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/ll_real_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#00000000"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iv_real_time"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:src="@mipmap/ic_bus_real_time_gray" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_route"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#00000000"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iv_route"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:src="@mipmap/ic_bus_route_gray" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_stop_sign"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#00000000"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iv_stop_sign"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:src="@mipmap/ic_bus_stop_sign_gray" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_real_time_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_search"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/blue_stroke"
                android:focusable="false"
                android:gravity="center_vertical"
                android:hint="请输入路线名称如：8"
                android:padding="5dp"
                android:textColor="#123456"
                android:textColorHint="@color/dark_gray"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_route_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@mipmap/ic_bus_route_start" />

                <TextView
                    android:id="@+id/tv_start_station"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="50dp"
                    android:background="@drawable/blue_stroke"
                    android:focusable="false"
                    android:gravity="center_vertical"
                    android:hint="请输入起始站如：省科干学院"
                    android:padding="5dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/dark_gray"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@mipmap/ic_bus_route_end" />

                <TextView
                    android:id="@+id/tv_end_station"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="50dp"
                    android:background="@drawable/blue_stroke"
                    android:focusable="false"
                    android:gravity="center_vertical"
                    android:hint="请输入终点站如：华发商都"
                    android:padding="5dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/dark_gray"
                    android:textSize="16sp" />

            </LinearLayout>

            <Button
                android:id="@+id/btn_route"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/button_bg_blue_retangle"
                android:text="查询方案"
                android:textColor="@color/white"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_station_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_station"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/blue_stroke"
                android:focusable="false"
                android:gravity="center_vertical"
                android:hint="请输入站点名称如：拱北口岸"
                android:padding="5dp"
                android:textColor="#123456"
                android:textColorHint="@color/dark_gray"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_station"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/button_bg_blue_retangle"
                android:text="查询站点"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="站点公交查询功能，后续实现。。。"
                android:textColor="@color/dark_gray"
                android:textSize="12sp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>