<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.sim.traveltool">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="com.sim.traveltool.Application"
        android:allowBackup="true"
        android:icon="@mipmap/ic_app_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/APPTheme"
        android:usesCleartextTraffic="true"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name="com.sim.traveltool.ui.activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.sim.traveltool.ui.activity.news.NewsDetailActivity" />
        <activity android:name="com.sim.traveltool.ui.activity.user.UserLogInActivity" />
        <activity android:name="com.sim.traveltool.ui.activity.user.UserRegisteredActivity" />
        <activity android:name="com.sim.traveltool.ui.activity.user.UserInfoUpdateActivity" />
        <activity android:name="com.sim.traveltool.ui.activity.news.NewsCollectActivity" />
        <activity android:name="com.sim.traveltool.ui.activity.bus.BusRealTimeSearchActivity" />
        <activity android:name="com.sim.traveltool.ui.activity.bus.BusRealTimeActivity" />
        <activity android:name="com.sim.traveltool.ui.activity.bus.SearchLocationStartActivity" />
        <activity android:name="com.sim.traveltool.ui.activity.bus.SearchLocationEndActivity" />
        <activity android:name="com.sim.traveltool.ui.activity.bus.RouteActivity" />
        <activity android:name="com.sim.traveltool.ui.activity.record.AllRecordActivity"/>

    </application>

</manifest>